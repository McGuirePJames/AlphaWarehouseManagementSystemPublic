    <link href="~/Content/Home/Home.css" rel="stylesheet" />
    <title>Home Navigation</title>
</head>
<html lang="en">
<body>
    @Html.Partial(@"~/Views/Shared/NavigationBar.cshtml")
    <main class="col-12 row">
        @Html.Partial(@"~/Views/Shared/NavigationSide.cshtml")
        <div class="row navigation-options col-sm-8 main-contents-container">
            <div class="col-12 col-sm-6 col-md-6 col-lg-4 navigation-option-container">
                <a class="col-12 navigation-option" href="/User/Home/">
                    <div class="navigation-option-icon-container text-center">
