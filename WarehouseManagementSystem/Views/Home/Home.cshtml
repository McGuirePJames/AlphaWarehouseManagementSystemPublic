                    <div class="navigation-option-description-container">
                        <p class="text-center">Data Entry </p>
                    </div>
                </a>
            </div>
            <div class="col-12 col-sm-6 col-md-6 col-lg-4 navigation-option-container">
                <a class="col-12 navigation-option" href="/Reports/Add/">
                    <div class="navigation-option-icon-container text-center">
                        <i class="fas fa-chart-bar fa-5x navigation-option-navigation-icon"></i>
                    </div>
                    <div class="navigation-option-title-container">
                        <h2 class="text-center">Reports</h2>
                    </div>
                    <div class="navigation-option-description-container">
                        <p class="text-center">Manage a variety of reports tailored to fit your needs </p>
                    </div>
                </a>
            </div>

        </div>
    </main>
    @Html.Partial("~/Views/Shared/Footer.cshtml")
</body>
</html>
